<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_about_us"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context=".aboutus"
  >


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/scrollView11">


            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:useDefaultMargins="true"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp">

                <ImageView
                    android:layout_width="128dp"
                    android:layout_height="128dp"
                    android:id="@+id/komal"
                    android:layout_row="0"
                    android:layout_column="0"
                    android:layout_margin="18dp"
                    android:src="@drawable/komal"

                    android:scaleType="fitCenter"
                    android:layout_gravity="center"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="IoT Developer"
                    android:textSize="15dp"
                    android:id="@+id/textView63"
                    android:fontFamily="@font/signika_light"
                    android:layout_row="1"
                    android:layout_column="0"
                    android:layout_gravity="center_horizontal"
                    android:textColor="#000000"
                    android:textStyle="bold"/>
                <ImageView
                    android:layout_width="128dp"
                    android:layout_height="128dp"
                    android:id="@+id/rajat"
                    android:layout_row="2"
                    android:layout_column="0"
                    android:layout_margin="8dp"
                    android:src="@drawable/rajat"

                    android:layout_gravity="center"
                    android:scaleType="centerCrop" />
                <ImageView
                    android:layout_width="128dp"
                    android:layout_height="128dp"
                    android:id="@+id/manmeet"
                    android:layout_row="0"
                    android:layout_column="7"
                    android:fontFamily="@font/signika_light"
                    android:layout_margin="8dp"
                    android:src="@drawable/manmeet"

                    android:scaleType="fitCenter"
                    android:layout_gravity="center"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Full Stack Developer"
                    android:textSize="15dp"
                    android:fontFamily="@font/signika_light"
                    android:id="@+id/textView70"
                    android:layout_row="1"
                    android:layout_column="7"
                    android:layout_gravity="center_horizontal"
                    android:textColor="#000000"
                    android:textStyle="bold"/>

             <TextView
                    android:id="@+id/textView68"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="0"
                    android:layout_gravity="center_horizontal"
                    android:layout_row="3"
                 android:fontFamily="@font/signika_light"
                    android:text="Android Developer"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="#000000"
                    android:textSize="15dp"
                    android:textStyle="bold" />

                <ImageView
                    android:layout_width="128dp"
                    android:layout_height="128dp"
                    android:id="@+id/dipesh"
                    android:layout_row="2"
                    android:layout_column="7"
                    android:layout_margin="8dp"
                    android:src="@drawable/diipesh"

                    android:layout_gravity="center"
                    android:scaleType="centerCrop" />

                <TextView
                    android:id="@+id/textView66"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="7"
                    android:fontFamily="@font/signika_light"
                    android:layout_gravity="center_horizontal"
                    android:layout_row="3"

                    android:text="Android Developer"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="#000000"
                    android:textSize="15dp"
                    android:textStyle="bold" />

               

            </GridLayout>

    </ScrollView>
</RelativeLayout>

