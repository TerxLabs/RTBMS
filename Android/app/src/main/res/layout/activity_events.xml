
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"

android:layout_marginLeft="7dp"

    android:layout_marginRight="7dp"
android:layout_marginBottom="7dp"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="91dp"
        >

        <ImageView
            android:layout_width="70dp"
            android:id="@+id/image_events"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:src="@drawable/event_icon" />

        <TextView
            android:id="@+id/event_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/signika_light"

            android:layout_above="@+id/event_date"
            android:layout_toEndOf="@+id/image_events"
            android:text="Event Name"
            android:textColor="#000000"
            android:textSize="16sp"
            tools:ignore="UnknownId" />

        <TextView
            android:id="@+id/event_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:fontFamily="@font/signika_light"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:text="Event Date"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/event_venue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/signika_light"
            android:layout_below="@+id/event_date"
            android:layout_toEndOf="@+id/image_events"
            android:text="Event venue"
            android:textColor="#000000"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/event_city_pincode"
            android:layout_width="wrap_content"
            android:fontFamily="@font/signika_light"
            android:layout_height="wrap_content"

            android:layout_below="@+id/event_date"
            android:layout_toEndOf="@+id/event_venue"
            android:text="Event Pincode"
            android:textColor="#000000"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/event_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="8dp"
            android:layout_alignTop="@+id/event_name"
            android:text="Event time"
            android:textSize="13sp" />
    </RelativeLayout>

</android.support.v7.widget.CardView>