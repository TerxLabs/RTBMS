<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="rtbms.terxlabs.com.Detail_Hospital"
    xmlns:android="http://schemas.android.com/apk/res/android" >





    <RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"




    >

    <ImageView
        android:id="@+id/hospital_image"
        android:layout_width="match_parent"
        android:layout_height="262dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:scaleType="centerCrop" />

        <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:visibility="gone"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="101dp" />
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_marginLeft="15dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="265dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"

                android:orientation="horizontal"
                android:weightSum="3">
                <LinearLayout
                    android:gravity="center"
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent">


                    <Button
                        android:id="@+id/callbutton"
                        android:layout_width="50dp"
                        android:layout_height="50dp"

                        android:background="@drawable/call_assest"
                        android:scaleType="fitXY"
                        tools:ignore="RtlHardcoded" />

                </LinearLayout>
                <LinearLayout
                    android:gravity="center"
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:textColor="#000"
                    android:layout_weight="1"
                    android:layout_height="match_parent">


                    <Button
                        android:id="@+id/button_email"
                        android:layout_width="51dp"
                        android:layout_height="44dp"

                        android:background="@drawable/gmail"
                        android:scaleType="fitEnd" />
                </LinearLayout>
                <LinearLayout
                    android:gravity="center"
                    android:orientation="vertical"

                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent">
                    <Button
                        android:id="@+id/get_direction"
                        android:layout_width="65dp"
                        android:layout_height="69dp"



                        android:background="@mipmap/directions"
                        android:gravity="right"
                        tools:ignore="RtlHardcoded" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:fontFamily="sans-serif-condensed"
                        android:text="Direction"
                        android:textColor="#000"
                        android:textStyle="bold"
                        tools:fontFamily="casual"
                        tools:ignore="RtlHardcoded" />

                </LinearLayout>
            </LinearLayout>

        </android.support.v7.widget.CardView>
        <TextView
            android:id="@+id/text_name"
            android:layout_width="219dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/signika_light"
            android:layout_alignParentBottom="true"
            android:layout_alignStart="@+id/text_add"
            android:layout_marginBottom="100dp"
            android:text="Name"
            android:textColor="#000"
            android:textStyle="bold"
            tools:ignore="RtlHardcoded" />





    <TextView
        android:id="@+id/text_add"
        android:layout_width="307dp"
        android:layout_height="52dp"
        android:layout_alignParentBottom="true"
        android:fontFamily="@font/signika_light"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="41dp"
        android:layout_marginStart="12dp"
        android:text="Address"
        android:textColor="#000"
        android:textStyle="bold"
        tools:ignore="RtlHardcoded" />



</RelativeLayout>

    </RelativeLayout>

